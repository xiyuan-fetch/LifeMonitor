<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMainBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="背景壁纸" />

    <ImageButton
        android:id="@+id/btnToSettings"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="进入设置"
        android:padding="12dp"
        android:src="@android:drawable/ic_menu_preferences"
        app:tint="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:paddingBottom="20dp">

        <FrameLayout
            android:id="@+id/btnCheckInContainer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/shape_circle_glass">

            <Button
                android:id="@+id/btnCheckIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="立即签到"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="近15日签到统计"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <GridView
            android:id="@+id/gvCalendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp"
            android:background="#1AFFFFFF"
            android:numColumns="3"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:scrollbarThumbVertical="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="© 2026 生命监测系统"
            android:textColor="#66FFFFFF"
            android:textSize="10sp" />

    </LinearLayout>

</FrameLayout>